static FUNCTION BlockFooter

    DevPos( ROW()+1, 2 ) ; DevOut( "Obs         : " + PADR( FIELD->OBS , 50 ) )
    DevPos( ROW()+2, 2 ) ; DevOut( "Nome da mãe : " + PADR( FIELD->NOMEDAMAE , 50 ) )

RETURN NIL
























FUNCTION ClienteBeforeSubmit( hGet )

    if empty( hGet["UF"] )
        hGet["UF"] := "CE"
    endif


RETURN .T.
