    __oForm__:addMapControl( "F" , "CEP" , "       " , "@R 99.999-999" , 8 , , "CEP" , , , )
    __oForm__:addMapControl( "G" , "EMAIL" , SPACE(20) , , , , "EMAIL" , , , )
    __oForm__:addMapControl( "H" , "TELEFONES" , SPACE(20) , , , , "TELEFONES" , , , )
    __oForm__:addMapControl( "I" , "CPF" , SPACE(20) , , , , "CPF" , , , )
